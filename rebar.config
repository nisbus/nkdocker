{cover_enabled, true}.

{erl_opts, [
	    warn_unused_vars,
	    warn_export_all,
	    warn_shadow_vars,
	    warn_unused_imports,
	    warn_unused_function,
	    warn_bif_clash,
	    warn_unused_record,
	    warn_deprecated_function,
	    warn_obsolete_guard,
	    strict_validation,
	    warn_export_vars,
	    warn_exported_vars,
	    warn_untyped_record,
	    debug_info
	   ]
}.
{plugins, [rebar3_hex, rebar3_auto]}.
{deps, [
    {nkpacket, ".*", {git, "git@github.com:nisbus/nkpacket.git", {branch, "rebar_deps_update"}}}
]}.
